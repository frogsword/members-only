<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" href="/images/lock-svgrepo-com.svg"/>
  </head>
  <body>
    <%- include("./components/navbar.ejs")%>
    <main class="signup">
      <h1>Sign Up</h1>
      <form id="signup-form" action="/signup" method="POST">
        <div class="input-group flex-nowrap">
          <input class="form-control" id="username-input" name="username" type="text" placeholder="Username">
        </div>

        <div class="input-group flex-nowrap">
          <input class="form-control" id="password-input" name="password" type="password" placeholder="Password">
        </div>

        <div class="input-group flex-nowrap">
          <input class="form-control" id="confirm-input" name="confirm" type="password" placeholder="Confirm Password">
        </div>

        <% if(errors) {%>
          <%errors.forEach(error => {%>
            <p style="color: red;">Error: <%= error.msg %></p>
          <%})%>
        <%}%>

        <button type="submit" class="auth-btn">Sign Up</button>
      </form>
      <h3>Or</h3>
      <a href='/signin' style="color: blue; text-decoration: underline;">Log In</a>
    </main>
  </body>
</html>
